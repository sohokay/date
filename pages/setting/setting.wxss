page {
    background-color: #efeff4;
}

.list-wrap {
    background-color: #fff;
    border-top: 1rpx solid #eee;
    padding: 0 32rpx;
}

.list-item,.list-wrap {
    border-bottom: 1rpx solid #eee;
}

.list-item {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 30rpx 0;
    position: relative;
}

.footer::after {
    border-color: #ddd;
    border-style: solid;
    border-width: 2rpx 2rpx 0 0;
    content: " ";
    display: inline-block;
    height: 12rpx;
    position: absolute;
    right: 2rpx;
    top: 50%;
    transform: translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
    width: 12rpx;
}

.list-item:last-child {
    border: none;
}

.list-item .title {
    color: #333;
    font-size: 30rpx;
}

.list-item .description {
    color: #999;
    font-size: 24rpx;
}

button[plain] {
    border: none;
    color: #cca885;
}