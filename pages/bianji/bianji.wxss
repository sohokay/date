.avatar-wrap {
    align-items: center;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    height: 400rpx;
    justify-content: flex-start;
    position: relative;
}

.black-bg {
    background-color: #000;
    height: 96rpx;
    width: 100%;
}

.avatar-wrap .des {
    color: #999;
    font-size: 28rpx;
    margin: 0 10%;
    padding: 10rpx 0;
}

.block-wrap {
    background-color: #fff;
    margin-top: 32rpx;
    padding: 30rpx;
}

.title-wrap {
    align-items: center;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.title {
    color: #333;
}

.foot,.title {
    font-size: 28rpx;
}

.foot {
    color: #aa7e56;
    padding: 0 30rpx;
    position: relative;
}

.foot::after {
    border-color: #aa7e56;
    border-style: solid;
    border-width: 4rpx 4rpx 0 0;
    content: " ";
    display: inline-block;
    height: 12rpx;
    position: absolute;
    right: 4rpx;
    top: 50%;
    transform: translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
    width: 12rpx;
}

.info-label-list {
    padding-top: 32rpx;
}

.label-item {
    background-color: #e8d3ba;
    border-radius: 64rpx;
    color: #333;
    display: inline-block;
    font-size: 24rpx;
    margin: 5rpx;
    padding: 5rpx 30rpx;
}

.not-edit {
    color: #999;
}

.haven-edit,.not-edit {
    font-size: 28rpx;
    padding: 30rpx 0;
    text-align: center;
}

.haven-edit {
    color: #333;
}

.adduserimg {
    border-radius: 50%;
    height: 140rpx;
    margin-top: -70rpx;
    width: 140rpx;
}