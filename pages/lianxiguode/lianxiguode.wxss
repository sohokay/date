page {
    background-color: #f6f6f6;
}

.cell-group {
    background-color: #fff;
    padding: 0 40rpx;
}

button {
    margin: 0!important;
    width: 670rpx!important;
}

.cell {
    align-items: center;
    background: #fff;
    border-bottom: 1rpx solid #eee;
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    justify-content: flex-start;
    line-height: 1.4;
    overflow: hidden;
    padding: 30rpx 0!important;
    position: relative;
}

.cell:last-child {
    border-bottom: none;
}

.cell-ft-wrap {
    align-content: center;
    display: flex;
    flex-direction: row;
    justify-content: center;
}

.cell-ft {
    color: #495060;
    padding-right: 26rpx;
    position: relative;
    text-align: right;
}

.cell-ft::after {
    border-color: #dddee1;
    border-style: solid;
    border-width: 4rpx 4rpx 0 0;
    content: " ";
    display: inline-block;
    height: 12rpx;
    position: absolute;
    right: 4rpx;
    top: 50%;
    transform: translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
    width: 12rpx;
}

.cell-icon {
    background-color: initial;
    border-radius: 100rpx;
    height: 100rpx;
    margin-right: 24rpx;
    width: 100rpx;
}

.cell-bd {
    align-items: flex-start;
    display: flex;
    flex: 1;
    flex-direction: column;
    height: 90rpx;
    justify-content: space-between;
}

.cell-text {
    color: #333;
    font-size: 28rpx;
    font-weight: 500;
}

.cell-desc {
    font-size: 28rpx;
    font-weight: 400;
}

.msg-cell {
    align-items: center;
    background: #fff;
    background-color: #fff;
    border-top: 1rpx solid #eee;
    display: flex;
    flex-direction: row;
    font-size: 28rpx;
    justify-content: flex-start;
    line-height: 1.4;
    overflow: hidden;
    padding: 30rpx 40rpx;
    position: relative;
}

.msg-list-item {
    animation: fadeInOut .5s linear forwards;
    border: none!important;
}

.msg-cell-icon {
    border-radius: 100rpx;
    height: 100rpx;
    margin-right: 24rpx;
    width: 100rpx;
}

.msg-new {
    position: relative;
}

.msg-new::after {
    background-color: #fa5151;
    border-radius: 24rpx;
    content: " ";
    height: 24rpx;
    position: absolute;
    right: 24rpx;
    top: 0rpx;
    width: 24rpx;
    z-index: 11;
}

.msg-cell-ft {
    color: #495060;
    padding-right: 26rpx;
    position: relative;
    text-align: right;
}

.msg-cell-ft::after {
    border-color: #dddee1;
    border-style: solid;
    border-width: 4rpx 4rpx 0 0;
    content: " ";
    display: inline-block;
    height: 12rpx;
    position: absolute;
    right: 4rpx;
    top: 50%;
    transform: translateY(-50%) matrix(.71,.71,-.71,.71,0,0);
    width: 12rpx;
}

.msg-cell-bd {
    align-items: flex-start;
    flex: 1;
    flex-direction: column;
    height: 90rpx;
}

.msg-cell-bd,.msg-cell-row {
    display: flex;
    justify-content: space-between;
}

.msg-cell-row {
    align-items: center;
    flex-direction: row;
    width: 100%;
}

.msg-cell-time {
    color: #999;
    font-size: 24rpx;
    font-weight: 400;
}

.msg-cell-text {
    color: #333;
    font-size: 28rpx;
    font-weight: 500;
}

.msg-cell-desc {
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
}

.avatar-wrap {
    background-color: #f6f6f6;
    border-radius: 4rpx;
    height: 92rpx;
    margin-right: 24rpx;
    padding: 4rpx;
    width: 92rpx;
}

.avatar-wrap image {
    height: 32rpx;
    padding: 1rpx;
    width: 32rpx;
}

.demo-item {
    background-color: #fff;
    padding: 20rpx;
    position: relative;
}

.demo-item:after {
    border-bottom: 2rpx solid #d9d9d9;
    bottom: 0;
    color: #d9d9d9;
    content: " ";
    height: 2rpx;
    left: 0;
    position: absolute;
    right: 0;
    transform: scaleY(.5);
    transform-origin: 0 100%;
}

.demo-button {
    align-items: center;
    background: red;
    color: #fff;
    display: flex;
    height: 100%;
    justify-content: center;
    min-width: 140rpx;
    overflow: hidden;
    padding: 0 16rpx;
}

.msg-count {
    background-color: red;
    border-radius: 28rpx;
    color: #fff;
    font-size: 24rpx;
    height: 28rpx;
    line-height: 28rpx;
    min-width: 28rpx;
    padding: 6rpx;
    text-align: center;
}

.button-hover[plain],button[plain] {
    border: none;
    border-bottom: 1rpx solid #eee;
}