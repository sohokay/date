    background-color: #ee5e78;
}

.COLOR_7f51ec {
    background-color: #7f51ec;
}

.COLOR_fe9a13 {
    background-color: #fe9a13;
}

.COLOR_5a93ff {
    background-color: #5a93ff;
}

.top-wrap {
    height: 200rpx;
    overflow: hidden;
    position: relative;
    width: 100%;
}

.res-title {
    color: #333;
    font-size: 28rpx;
}

.res-other {
    color: #999;
    font-size: 24rpx;
    margin-top: 10rpx;
}